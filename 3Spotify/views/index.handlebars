    <link href="css/style.css" type="text/css" rel="stylesheet" media="screen,projection" />
    <link href="css/tonieStyle.css" type="text/css" rel="stylesheet" media="screen,projection" />
</head>

<body>
  <!--Navbar-->
  <nav class="navbar navbar-dark bg-primary teal">
      <!-- Collapse button-->
      <button class="navbar-toggler hidden-sm-up" type="button" data-toggle="collapse" data-target="#collapseEx2">
          <i class="fa fa-bars"></i>
      </button>
      <div class="container">
          <!--Collapse content-->
          <div class="collapse navbar-toggleable-xs" id="collapseEx2">
              <!--Navbar Brand-->
              <a class="navbar-brand">Spotify DJ</a>
          </div>
          <!--/.Collapse content-->
      </div>
  </nav>
  <!--/.Navbar-->

<!-- loginform -->
  <div id="loginForm" class="container col-md-6">
    <!--Form with header-->
    <div class="card">
        <div class="card-block">
            <!--Header-->
            <div class="form-header stylish-color">
                <h3 class="mdb-color white-text"><i class="fa fa-lock"></i> Login:</h3>
            </div>
            <!--Body-->
            <div class="md-form">
                <i class="fa fa-envelope prefix"></i>
                <input id="emailLogin" type="text" id="form2" class="form-control">
                <label for="form2">Your email</label>
            </div>
            <div class="md-form">
                <i class="fa fa-lock prefix"></i>
                <input id="passwordLogin" type="password" id="form4" class="form-control">
                <label for="form4">Your password</label>
            </div>
            <div class="text-xs-center">
                <button id="logIn" type="submit" class="btn btn-deep-purple">Login</button>
            </div>
        </div>
    </div>
    <!--/Form with header-->
  </div>

  <!-- signup form -->
  <!--Form with header-->
  <div id="signUpForm" class="container col-md-6">
  <div class="card">
    <div class="card-block">
      <!--Header-->
      <div class="form-header stylish-color">
        <h3 class="mdb-color white-text"><i class="fa fa-user"></i> Sign Up:</h3>
      </div>
      <!--Body-->
      <div class="md-form">
        <i class="fa fa-envelope prefix"></i>
        <input id="first_name" type="text" id="form2" class="form-control">
        <label for="form2">First Name</label>
      </div>
      <div class="md-form">
        <i class="fa fa-envelope prefix"></i>
        <input id="last_name" type="text" id="form2" class="form-control">
        <label for="form2">Last Name</label>
      </div>
      <div class="md-form">
        <i class="fa fa-envelope prefix"></i>
        <input id="emailSignUp" type="text" id="form2" class="form-control">
        <label for="form2">Your email</label>
      </div>
      <div class="md-form">
        <i class="fa fa-lock prefix"></i>
        <input id="passwordSignUp" type="password" id="form4" class="form-control">
        <label for="form4">Your password</label>
      </div>
      <div class="text-xs-center">
        <button id="signUp" class="btn btn-deep-purple">Sign up</button>
      </div>
    </div>
  </div>
</div>
  <!--/Form with header-->

    <!--Footer-->
    <footer class="page-footer mdb-color white-text center-on-small-only">
        <!--Copyright-->
        <div class="footer-copyright">
            <div class="container-fluid">
                Â© 2016 Copyright: Lola, Nisu, Tonie
            </div>
        </div>
        <!--/.Copyright-->
    </footer>
    <!--/.Footer-->

    <!--Import jQuery before materialize.js-->
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js"></script>
    <script src="js/app.js"></script>
    <script type="text/javascript">
        $('#signUp').on("click", function() {
            var userInput = {
                firstName: $('#first_name').val().trim(),
                lastName: $('#last_name').val().trim(),
                email: $('#emailSignUp').val().trim(),
                password: $('#passwordSignUp').val().trim(),
            }
            var currentURL = window.location.origin;
            $.post(currentURL + '/api/newuser', userInput, function(data) {
                window.location.replace("/users/" + data.id);
            });
            return false;
        });
        $('#logIn').on("click", function() {
            var userInput = {
                email: $('#emailLogin').val().trim(),
                password: $('#passwordLogin').val().trim()
            }
            var currentURL = window.location.origin;
            $.post(currentURL + '/login', userInput, function(data) {
                if (data.url) {
                    window.location = data.url;
                } else if (data.errorMessage) {
                    alert(data.errorMessage);
                } else {
                    alert("Server failure.")
                }
            });
            return false;
        });
    </script>
</body>

</html>
