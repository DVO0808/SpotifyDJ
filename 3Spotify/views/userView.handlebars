<!DOCTYPE html>
<html>
<head>
  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <!-- md bootstrap css cdn -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.2.0/css/mdb.min.css">
  <!--CSS-->
  <link href="css/tonieStyle.css" type="text/css" rel="stylesheet" media="screen,projection" />
</head>

<body>

  <!--Navbar-->
  <nav class="navbar navbar-dark bg-primary teal">
      <!-- Collapse button-->
      <button class="navbar-toggler hidden-sm-up" type="button" data-toggle="collapse" data-target="#collapseEx2">
          <i class="fa fa-bars"></i>
      </button>
      <div class="container">
          <!--Collapse content-->
          <div class="collapse navbar-toggleable-xs" id="collapseEx2">
              <!--Navbar Brand-->
              <a class="navbar-brand">Spotify DJ</a>
              <!--Search form-->
              <form class="form-inline">
                  <input class="form-control" type="text" placeholder="Search">
              </form>
              <!--Links-->
              <ul class="nav navbar-nav">
                  <li class="nav-item">
                      <a id="logout" class="nav-link">Logout</a>
                  </li>
              </ul>
          </div>
          <!--/.Collapse content-->
      </div>
  </nav>
  <!--/.Navbar-->

  <nav class="navbar navbar-dark bg-primary">
    <div class="collapse navbar-toggleable-xs" id="collapseEx2">
      <a class="navbar-brand">Spotify DJ</a>
    </div>
    <ul id="nav-mobile" class="right">
      <li class="search">
        <div class="nav-wrapper">
          <form>
            <div class="input-field">
              <input id="search" type="search" required>
              <label for="search"><i class="material-icons">search</i></label>
              <i class="material-icons">close</i>
            </div>
          </form>
        </div>
        <li><a id="logout" href="#">Logout</a></li>
      </li>
    </ul>
  </nav>

  <main>
    <div class="container" id="maincontainer">

    {{#with loggedUser}}
      <div id="username" class="col-sm-12 col-m-10">
        <h2>Hello, {{firstName}}!</h2>
        <h5>Ready to listen?</h5>
      </div>
    {{/with}}
    </div>
  </main>

  <!--Footer-->
  <footer class="page-footer mdb-color white-text center-on-small-only">
    <!--Copyright-->
    <div class="footer-copyright">
      <div class="container-fluid">
        Â© 2016 Copyright: Lola, Nisu, Tonie
      </div>
    </div>
    <!--/.Copyright-->
  </footer>
  <!--/.Footer-->

  <!--Import jQuery before materialize.js-->
  <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
  <script type="text/javascript" src="../js/materialize.js"></script>
  <script src="../js/app.js"></script>
  <script type="text/javascript">

      $("#logout").click(function(event){
        event.preventDefault();
        var currentURL = window.location.origin;
        $.get(currentURL + "/logout").then(function(){
          window.location = "/";
        });
      });

  </script>
</body>
</html>
