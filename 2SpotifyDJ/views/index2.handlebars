<!DOCTYPE html>
<html>

<head>
    <link rel="manifest" href="/manifest.json">
    <!--CSS-->
    <link type="text/css" rel="stylesheet" href="css/materialize.min.css" media="screen,projection" />
    <link href="css/style.css" type="text/css" rel="stylesheet" media="screen,projection" />
    <link href="css/tonieStyle.css" type="text/css" rel="stylesheet" media="screen,projection" />

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <!-- md bootstrap css cdn -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.2.0/css/mdb.min.css">

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>

<body>
    <!--Navbar-->
    <nav class="navbar navbar-dark bg-primary">
        <!-- Collapse button-->
        <button class="navbar-toggler hidden-sm-up" type="button" data-toggle="collapse" data-target="#collapseEx2">
      <i class="fa fa-bars"></i>
    </button>
        <div class="container">
            <!--Collapse content-->
            <div class="collapse navbar-toggleable-xs" id="collapseEx2">
              <!--Navbar Brand-->
              <a class="navbar-brand">Spotify DJ</a>
            </div>
        </div>
    </nav>
    <!--/.Navbar-->


    <div id="index-banner" class="parallax-container top-image">
        <div class="container top-text">
            <h1 class="header white-text center">It's your party and you'll DJ if you want to</h1>
            <div class="row center">
                <!-- <h4 class="header white-text col s12 light">A Perfect Place for Product Love</h4> -->
            </div>
            <div class="row center">
                <a href="#modal1" id="download-button" class="btn-large waves-effect waves-light lighten-1 modal-trigger">Get Listening</a>
            </div>
        </div>
    </div>

    <!-- signup form -->
    <form id="signupForm">
        <div class="form-group row">
            <div class="input-field col s6">
                <input id="userName" type="text" class="validate">
                <label for="userName">User Name</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input id="emailSignUp" type="email" class="validate">
                <label for="emailSignUp">E-mail</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input id="passwordSignUp" type="password" class="validate">
                <label for="passwordSignUp">Password</label>
            </div>
        </div>
    </form>
    <button class="btn waves-effect waves-light left" type="submit" name="action" id="signUp">Sign Up</button>

    <!-- login form -->
    <form id="loginForm">
        <div class="form-group row">
            <div class="input-field col s12">
                <input id="emailLogin" type="email" name="email-for-login" class="validate">
                <label for="emailLogin">E-mail</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input id="passwordLogin" type="password" class="validate">
                <label for="passwordLogin">Password</label>
            </div>
        </div>
    </form>
    <button class="btn waves-effect waves-light left" type="submit" name="action" id="logIn">Login</button>

    <footer class="page-footer">
        <div class="container">
            <div class="row">
            </div>
        </div>
        <div class="footer-copyright">
            <div class="container">
                Â© 2016 SpotifyDJ
            </div>
        </div>
    </footer>

    <!--Import jQuery before materialize.js-->
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js"></script>
    <script src="js/app.js"></script>
    <script type="text/javascript">
        $('#clearSignUp').on("click", function() {
            $('#userName').val('');
            $('#emailSignUp').val('');
            $('#passwordSignUp').val('');
        });
        $('#signUp').on("click", function() {
            var userInput = {
                userName: $('#userName').val().trim(),
                email: $('#emailSignUp').val().trim(),
                password: $('#passwordSignUp').val().trim(),
            }
            var currentURL = window.location.origin;
            $.post(currentURL + '/api/newuser', userInput, function(data) {
                $('#modal1').closeModal();
                window.location.replace("/users/" + data.id);
            });
            return false;
        });
        $('#logIn').on("click", function() {
            var userInput = {
                email: $('#emailLogin').val().trim(),
                password: $('#passwordLogin').val().trim()
            }
            var currentURL = window.location.origin;
            $.post(currentURL + '/login', userInput, function(data) {
                if (data.url) {
                    window.location = data.url;
                } else if (data.errorMessage) {
                    alert(data.errorMessage);
                } else {
                    alert("Server failure.")
                }
            });
            return false;
        });
    </script>
</body>

</html>
